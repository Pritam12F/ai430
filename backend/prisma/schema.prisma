generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Campaign {
  id             String         @id @default(cuid())
  name           String
  startDate      DateTime?
  endDate        DateTime?
  targetAudience String
  type           CampaignType
  status         CampaignStatus @default(SCHEDULED)
  emails         Email[]
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt
}

model Email {
  id         String      @id @default(cuid())
  from       String
  to         String
  subject    String?
  body       String?
  status     EmailStatus
  sentAt     DateTime?
  campaignId String
  campaign   Campaign    @relation(fields: [campaignId], references: [id])
}

enum CampaignType {
  EMAIL
  SMS
  SOCIAL
}

enum EmailStatus {
  SENT
  DELIVERED
  OPENED
}

enum CampaignStatus {
  SCHEDULED
  IN_PROGRESS
  COMPLETED
}
